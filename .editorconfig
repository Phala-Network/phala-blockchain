root = true
[*]
indent_style=space
indent_size=4
tab_width=4
end_of_line=lf
charset=utf-8
trim_trailing_whitespace=true
max_line_length=120
insert_final_newline=true

[pallets/**.rs]
indent_style=tab
indent_size=tab

[standalone/{executor,node,rpc,runtime}/**.rs]
indent_style=tab
indent_size=tab

[*.{yml,yaml}]
indent_style=space
indent_size=2
tab_width=8
end_of_line=lf

[standalone/pruntime/**.rs]
indent_style=space
indent_size=4

[standalone/pherry/**.rs]
indent_style=space
indent_size=4

[scripts/**]
indent_style=space
indent_size=4

[e2e/**.json]
indent_style=space
indent_size=2
