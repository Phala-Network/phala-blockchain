{
  "compilerOptions": {
    "rootDir": "src",
    "lib": [
      "es2021",
      "dom"
    ],
    "target": "es2021",
    "declaration": true,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src",
    "@types/polkadot-js.d.ts"
  ],
  "exclude": [
    "**/*.test.ts",
    "src/proto"
  ]
}